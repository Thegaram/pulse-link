{
  "name": "pulse-link",
  "version": "0.1.0",
  "description": "P2P WebRTC synchronized metronome for musicians",
  "type": "module",
  "scripts": {
    "predev": "node scripts/generate-local-config.mjs",
    "dev": "vite",
    "prebuild": "node scripts/generate-local-config.mjs",
    "build": "vite build",
    "preview": "vite preview --port 8000",
    "check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:secrets": "secretlint \"**/*\"",
    "quality": "npm run check && npm run lint && npm run lint:secrets"
  },
  "keywords": [
    "metronome",
    "webrtc",
    "p2p",
    "music",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "secretlint": "^9.0.0",
    "@secretlint/secretlint-rule-preset-recommend": "^9.0.0",
    "svelte": "^5.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.25.0",
    "vite": "^5.4.0"
  }
}
